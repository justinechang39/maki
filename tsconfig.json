{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "react"
  },
  "include": ["*.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/generated/**/*"]
}